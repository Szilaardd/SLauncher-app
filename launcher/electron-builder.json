{
  "appId": "com.szilaardd.slauncher",
  "productName": "SLauncher",
  "directories": {
    "buildResources": "assets",
    "output": "dist"
  },
  "files": [
    "build/**/*",
    "main.js",
    "preload.js",
    "package.json"
  ],
  "extraMetadata": {
    "main": "main.js"
  },
  "win": {
    "target": "nsis"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true
  },
  "publish": [
    {
      "provider": "github",
      "owner": "szilaardd",
      "repo": "SLauncher-app"
    }
  ]
}
