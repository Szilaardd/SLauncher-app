{
  "name": "launcher",
  "version": "5.0.0",
  "private": true,
  "main": "main.js",
  "description": "SLauncher - Game launcher app",
  "author": "Szilárd Bálint",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "package": "electron-builder"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.3",
    "react-scripts": "^5.0.1",
    "web-vitals": "^5.0.3"
  },
  "devDependencies": {
    "electron": "^25.2.0",
    "electron-builder": "^26.0.12"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.szilaardd.slauncher",
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
